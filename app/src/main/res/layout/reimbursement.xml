<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/login_bg"
    >
    <com.fajieyefu.jiuzhou.Bean.TitleLayout
        android:id="@+id/head_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.fajieyefu.jiuzhou.Bean.TitleLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/head_title">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/corner_white"
            android:padding="5dp"
            >
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="报销模板："
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="16sp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <Spinner
                android:id="@+id/reimbursement_type"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                />
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_marginTop="6dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FF909090"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/corner_white"
            android:layout_marginTop="6dp"
            android:padding="5dp"
            >
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="申请人："
                android:layout_gravity="center"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/reimbursement_man"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"/>
            </LinearLayout>
        <TextView
            android:layout_marginTop="6dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FF909090"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/corner_white"
            android:padding="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="所在部门："
                android:layout_gravity="center"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/department"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                />
        </LinearLayout>
        <TextView
            android:layout_marginTop="6dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FF909090"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/corner_white"
            android:padding="5dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="报销数额："
                android:layout_gravity="center"
                android:textSize="16sp"/>
            <EditText
                android:id="@+id/reimbursement_amount"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:inputType="number"
                android:background="@drawable/corner_text_input"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="6dp"
            android:background="#FF909090"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/corner_white"
            android:padding="5dp"
            >
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="报销项目："
                android:layout_gravity="center"
                android:textSize="16sp"/>
            <EditText
                android:id="@+id/reimbursement_title"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:background="@drawable/corner_text_input"
                android:paddingLeft="5dp"
                android:hint="请填写申请项目"/>
        </LinearLayout>
        <TextView
            android:layout_marginTop="6dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FF909090"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/corner_white"
            android:padding="5dp"
            >
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="报销说明："
                android:layout_gravity="center"
                android:textSize="16sp"/>
            <EditText
                android:id="@+id/reimbursement_content"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:maxLength="100"
                android:inputType="textMultiLine"
                android:background="@drawable/corner_text_input"
                android:paddingLeft="5dp"
                android:hint="请填写申请详情"
                android:gravity="top"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="附件"
            android:gravity="center_vertical"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/files_rv"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:padding="5dp"
            android:scrollbars="horizontal"
            android:layout_marginBottom="20dp">
        </android.support.v7.widget.RecyclerView>


        <Button
            android:id="@+id/submit_reimbursement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="确认提交"
            android:background="@drawable/corner_submit"
            />
    </LinearLayout>

    </ScrollView>




</RelativeLayout>
